{
	"legend": "Contact",
	"submit": "Submit",
	"success_class": "success",
	"error_class": "error",
	"success_message": "Thank you for contacting me! If needed, you will hear back within 24 hours.",
	"error_message": "Please correct the following errors:",
	"template_fields": [
		{
			"id": "name",
			"label": "Name:",
			"required": "true",
			"element": "input",
			"type": "text",
			"html5_validation": "[a-zA-Z0-9 ]+",
			"size": "40",
			"error": "Please enter your name",
			"sanitizer": "sanitize_text_field"
		},
		{
	        "id": "email",
	        "label": "Email:",
	        "required": "true",
	        "element": "input",
	        "type": "text",
	        "size": "40",
	        "error": "Please enter a valid email address",
	        "sanitizer": "sanitize_email"
		},
		{
	        "id": "email_updates",
	        "label": "Check here to receive email updates",
	        "element": "input",
	        "type": "checkbox"
		},
		{
	        "id": "subject",
	        "label": "Subject:",
	        "required": "true",
	        "element": "input",
	        "type": "text",
	        "html5_validation": "[a-zA-Z ]+",
	        "size": "40",
	        "error": "Please enter a subject",
	        "sanitizer": "sanitize_text_field"
		},
		{
	        "id": "message",
	        "label": "Message:",
	        "required": "true",
	        "element": "textarea",
	        "rows": "6",
	        "cols": "35",
	        "error": "Please enter your message",
	        "sanitizer": "sanitize_textarea_field"
		}
	]
}